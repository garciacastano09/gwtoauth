<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>googleAuthServlet</servlet-name>
    <servlet-class>jgc.asai.gwtoauth.server.GoogleAuthServiceImpl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>facebookAuthServlet</servlet-name>
    <servlet-class>jgc.asai.gwtoauth.server.FacebookAuthServiceImpl</servlet-class>
  </servlet>

  <!-- Servlet Mappings -->
  <servlet-mapping>
    <servlet-name>googleAuthServlet</servlet-name>
    <url-pattern>googleAuth</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>facebookAuthServlet</servlet-name>
    <url-pattern>facebookAuth</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>BaseApp.html</welcome-file>
  </welcome-file-list>

</web-app>
